        <!-- Medication Kanban View -->
        <record id="view_clinic_medication_kanban" model="ir.ui.view">
            <field name="name">clinic.medication.kanban</field>
            <field name="model">clinic.medication</field>
            <field name="arch" type="xml">
                <kanban string="Medications" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="strength"/>
                    <field name="dosage_form"/>
                    <field name="drug_class"/>
                    <field name="controlled_substance"/>
                    <field name="controlled_schedule"/>
                    <field name="formulary_status"/>
                    <field name="prescription_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="strength"/> â€¢ <field name="dosage_form"/>
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <t t-if="record.controlled_substance.raw_value">
                                                <span class="badge badge-warning">
                                                    <field name="controlled_schedule"/>
                                                </span>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="drug_class"/>
                                        <br/>
                                        <field name="route_of_administration"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge badge-pill badge-info">
                                                <i class="fa fa-prescription"/> <field name="prescription_count"/>
                                            </span>
                                            <t t-if="record.formulary_status.raw_value == 'on_formulary'">
                                                <span class="badge badge-pill badge-success">On Formulary</span>
                                            </t>
                                            <t t-if="record.formulary_status.raw_value == 'off_formulary'">
                                                <span class="badge badge-pill badge-danger">Off Formulary</span>
                                            </t>
                                            <t t-if="record.formulary_status.raw_value == 'restricted'">
                                                <span class="badge badge-pill badge-warning">Restricted</span>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Medication Action -->
        <record id="action_clinic_medication" model="ir.actions.act_window">
            <field name="name">Medications</field>
            <field name="res_model">clinic.medication</field>
            <field name="view_mode">kanban,list,form</field>
            <!-- <field name="search_view_id" ref="view_clinic_medication_search"/> -->
            <field name="context">{'search_default_active_medications': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add your first medication to the database
                </p>
                <p>
                    Build your medication database with comprehensive drug information
                    including dosing guidelines, contraindications, and safety information.
                    This will enable safe and effective prescribing.
                </p>
            </field>
        </record>

        <!-- Medication Category list View -->
        <record id="view_clinic_medication_category_list" model="ir.ui.view">
            <field name="name">clinic.medication.category.list</field>
            <field name="model">clinic.medication.category</field>
            <field name="arch" type="xml">
                <list string="Medication Categories">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="medication_count"/>
                    <field name="active" invisible="0"/>
                </list>
            </field>
        </record>

        <!-- Medication Category Form View -->
        <record id="view_clinic_medication_category_form" model="ir.ui.view">
            <field name="name">clinic.medication.category.form</field>
            <field name="model">clinic.medication.category</field>
            <field name="arch" type="xml">
                <form string="Medication Category">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Category Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="parent_id"/>
                            <field name="active"/>
                        </group>
                        <field name="description" placeholder="Category description and usage guidelines..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Medication Category Action -->
        <record id="action_clinic_medication_category" model="ir.actions.act_window">
            <field name="name">Medication Categories</field>
            <field name="res_model">clinic.medication.category</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

