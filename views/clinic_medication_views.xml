<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Medication list View -->
        <record id="view_clinic_medication_list" model="ir.ui.view">
            <field name="name">clinic.medication.list</field>
            <field name="model">clinic.medication</field>
            <field name="arch" type="xml">
                <list string="Medications" sample="1" decoration-warning="controlled_substance == True">
                    <field name="name"/>
                    <field name="strength"/>
                    <field name="dosage_form"/>
                    <field name="drug_class"/>
                    <field name="route_of_administration"/>
                    <field name="controlled_substance"/>
                    <field name="controlled_schedule"  invisible="controlled_substance == False" />
                    <field name="formulary_status"/>
                    <field name="prescription_count"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Medication Form View -->
        <record id="view_clinic_medication_form" model="ir.ui.view">
            <field name="name">clinic.medication.form</field>
            <field name="model">clinic.medication</field>
            <field name="arch" type="xml">
                <form string="Medication">
                    <header>
                        <button name="action_view_prescriptions" type="object" 
                                string="View Prescriptions" class="btn-primary"
                                invisible= "prescription_count == 0"/>
                        <button name="duplicate_medication" type="object" 
                                string="Duplicate" class="btn-secondary"/>
                        <button name="toggle_active" type="object" 
                                string="Archive" class="btn-secondary"
                                invisible="active == False" />
                        <button name="toggle_active" type="object" 
                                string="Unarchive" class="btn-secondary"
                                invisible = "active == True"/>
                        <field name="active" widget="boolean_toggle" options="{'terminology': 'archive'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_prescriptions" type="object" 
                                    class="oe_stat_button" icon="fa-prescription">
                                <field name="prescription_count" widget="statinfo" 
                                       string="Prescriptions"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Generic Medication Name" required="1"/>
                            </h1>
                            <h2>
                                <field name="strength" placeholder="e.g., 500mg, 10mg/ml" required="1"/>
                                <field name="dosage_form" required="1"/>
                            </h2>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="generic_name"/>
                                <field name="drug_class" required="1"/>
                                <field name="category_id"/>
                                <field name="route_of_administration"/>
                                <field name="unit_of_measure"/>
                            </group>
                            <group name="regulatory" string="Regulatory Information">
                                <field name="controlled_substance"/>
                                <field name="controlled_schedule" 
                                       invisible="controlled_substance == False" required = "controlled_substance == True"/>
                                <field name="formulary_status"/>
                                <field name="preferred_generic"/>
                                <field name="pregnancy_category"/>
                                <field name="pediatric_use"/>
                            </group>
                        </group>

                        <group name="manufacturer_info" string="Manufacturer Information">
                            <group>
                                <field name="manufacturer"/>
                                <field name="ndc_number"/>
                                <field name="lot_number"/>
                            </group>
                            <group>
                                <field name="cost_per_unit"/>
                                <field name="expiration_monitoring"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="clinical_info" string="Clinical Information">
                                <group>
                                    <field name="indications" placeholder="Approved medical uses and conditions treated..."/>
                                    <field name="contraindications" placeholder="Conditions where drug should not be used..."/>
                                    <field name="side_effects" placeholder="Common and serious adverse effects..."/>
                                    <field name="drug_interactions" placeholder="Known drug-drug interactions..."/>
                                    <field name="geriatric_considerations" placeholder="Special considerations for elderly patients..."/>
                                </group>
                            </page>
                            
                            <page name="dosing_info" string="Dosing Information">
                                <group>
                                    <field name="usual_adult_dose" placeholder="Standard adult dosing recommendations..."/>
                                    <field name="usual_pediatric_dose" placeholder="Standard pediatric dosing recommendations..."/>
                                    <field name="maximum_daily_dose" placeholder="Maximum safe daily dose..."/>
                                    <field name="renal_adjustment" placeholder="Dose adjustment for kidney disease..."/>
                                    <field name="hepatic_adjustment" placeholder="Dose adjustment for liver disease..."/>
                                </group>
                            </page>
                            
                            <page name="brand_names" string="Brand Names &amp; Storage">
                                <group>
                                    <field name="brand_names" placeholder="Commercial brand names (comma-separated)..."/>
                                    <field name="storage_requirements" placeholder="Special storage conditions (temperature, light, etc.)..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

